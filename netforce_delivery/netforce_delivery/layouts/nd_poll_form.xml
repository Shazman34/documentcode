<form model="nd.poll">
    <field name="name"/>
    <related>
        <field name="options">
            <list>
                <field name="name"/>
            </list>
            <form>
                <field name="name"/>
            </form>
        </field>
        <field name="answers">
            <list>
                <field name="order_id"/>
                <field name="option_id"/>
            </list>
            <form>
                <field name="order_id"/>
                <field name="option_id"/>
            </form>
        </field>
    </related>
</form>
