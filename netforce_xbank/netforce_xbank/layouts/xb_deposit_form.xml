<form model="xb.deposit" attrs='{"readonly":[["state","=","done"]]}'>
    <head>
        <field name="state"/>
    </head>
    <field name="number"/>
    <field name="date_created"/>
    <field name="account_id"/>
    <field name="currency"/>
    <field name="amount"/>
    <field name="address"/>
